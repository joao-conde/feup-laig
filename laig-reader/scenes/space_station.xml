<SCENE>

<INITIALS>
    <frustum near="0.1" far="500"/>
    <translation x="-1" y="1" z="0" />
    <rotation axis="x" angle="0" />
    <rotation axis="y" angle="0" />
    <rotation axis="z" angle="0" />
    <scale sx="0.25" sy="0.25" sz="0.25" />
    <reference length="5" />
</INITIALS>

<ILLUMINATION>
    <ambient r="0.0" g="0.0" b="0.0" a="1" />
    <background r="0.1" g="0.1" b="0.1" a="1" />
    <doubleside value = "1"/>
</ILLUMINATION>

<LIGHTS>
	<LIGHT id="light1">
        <enable value ="1" />
        <position  x="0" y="10" z="0" w="1" />
        <ambient r="1.0" g="1.0" b="1.0" a="1.0" />
        <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
        <specular r="1.0" g="1.0" b="1.0" a="1.0" />
  </LIGHT>
  <LIGHT id="light2">
        <enable value ="1" />
        <position  x="10" y="0" z="0" w="1" />
        <ambient r="1.0" g="1.0" b="1.0" a="1.0" />
        <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
        <specular r="1.0" g="1.0" b="1.0" a="1.0" />
  </LIGHT>
  <LIGHT id="light3">
        <enable value ="1" />
        <position  x="-10" y="0" z="0" w="1" />
        <ambient r="1.0" g="1.0" b="1.0" a="1.0" />
        <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
        <specular r="1.0" g="1.0" b="1.0" a="1.0" />
  </LIGHT>
  <LIGHT id="light4">
        <enable value ="1" />
        <position  x="0" y="0" z="10" w="1" />
        <ambient r="1.0" g="1.0" b="1.0" a="1.0" />
        <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
        <specular r="1.0" g="1.0" b="1.0" a="1.0" />
  </LIGHT>
  <LIGHT id="light5">
        <enable value ="1" />
        <position  x="0" y="0" z="-10" w="1" />
        <ambient r="1.0" g="1.0" b="1.0" a="1.0" />
        <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
        <specular r="1.0" g="1.0" b="1.0" a="1.0" />
  </LIGHT>
  <LIGHT id="light6">
        <enable value ="1" />
        <position  x="0" y="-10" z="0" w="1" />
        <ambient r="1.0" g="1.0" b="1.0" a="1.0" />
        <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
        <specular r="1.0" g="1.0" b="1.0" a="1.0" />
  </LIGHT>
</LIGHTS>

<TEXTURES>
  <TEXTURE id="trump">
      <file path="images/fake_news.jpg" />
      <amplif_factor s="1" t="1" />
  </TEXTURE>

  <TEXTURE id="ss_skin">
      <file path="images/metal.jpg" />
      <amplif_factor s="1" t="1" />
  </TEXTURE>
</TEXTURES>

<MATERIALS>

    <MATERIAL id="default_material">
        <shininess value="1" />
        <specular r="0.5" g="0.5" b="0.5" a="1" />
        <diffuse r="0.5" g="0.5" b="0.5" a="1" />
        <ambient r="0.5" g="0.5" b="0.5" a="1" />
        <emission r="0.0" g="0.0" b="0.0" a="1" />
    </MATERIAL>

</MATERIALS>

<NODES>

    <ROOT id="root" />

    <NODE id="root">
        <MATERIAL id="default_material" />
        <TEXTURE id="ss_skin" />

        <DESCENDANTS>
            <NODEREF id="space_station"/>
        </DESCENDANTS>

    </NODE>

    <NODE id="space_station">
      <MATERIAL id="null"/>
      <TEXTURE id="null"/>
      <DESCENDANTS>
        <NODEREF id="ss_sides"/>
        <NODEREF id="ss_body"/>
      </DESCENDANTS>
    </NODE>

    <NODE id="ss_sides">
      <MATERIAL id="null"/>
      <TEXTURE id="null"/>
      <DESCENDANTS>
        <NODEREF id="ss_leftside"/>
        <NODEREF id="ss_rightside"/>
      </DESCENDANTS>
    </NODE>

    <NODE id="ss_leftside">
      <MATERIAL id="null"/>
      <TEXTURE id="null"/>
      <TRANSLATION x="-3" y="0" z="-3" />
      <SCALE sx="2" sy="2.5" sz="2"/>
      <DESCENDANTS>
        <LEAF type="patch" args="40 40">
          <CPLINE>
            <CPOINT x="0" y="0" z="0" ww="1"/>
            <CPOINT x="0" y="2" z="2" ww="1"/>
            <CPOINT x="0" y="0" z="4" ww="1"/>
          </CPLINE>
          <CPLINE>
            <CPOINT x="-5" y="0" z="0" ww="1"/>
            <CPOINT x="-5" y="2" z="2" ww="1"/>
            <CPOINT x="-5" y="0" z="4" ww="1"/>
          </CPLINE>
        </LEAF>
      </DESCENDANTS>
    </NODE>

    <NODE id="ss_rightside">
      <MATERIAL id="null"/>
      <TEXTURE id="null"/>
      <TRANSLATION x="13" y="0" z="-3" />
      <SCALE sx="2" sy="2.5" sz="2"/>
      <DESCENDANTS>
        <LEAF type="patch" args="40 40">
          <CPLINE>
            <CPOINT x="0" y="0" z="0" ww="1"/>
            <CPOINT x="0" y="2" z="2" ww="1"/>
            <CPOINT x="0" y="0" z="4" ww="1"/>
          </CPLINE>
          <CPLINE>
            <CPOINT x="-5" y="0" z="0" ww="1"/>
            <CPOINT x="-5" y="2" z="2" ww="1"/>
            <CPOINT x="-5" y="0" z="4" ww="1"/>
          </CPLINE>
        </LEAF>
      </DESCENDANTS>
    </NODE>


    <NODE id="ss_body">
      <MATERIAL id="null"/>
      <TEXTURE id="null"/>
      <DESCENDANTS>
        <NODEREF id="ss_middle"/>
        <NODEREF id="ss_bottom"/>
        <NODEREF id="ss_top"/>
      </DESCENDANTS>
    </NODE>

    <NODE id="ss_bottom">
      <MATERIAL id="null"/>
      <TEXTURE id="null"/>
      <TRANSLATION x="0" y="0" z="8"/>
     <DESCENDANTS>
        <LEAF id="ss_bot_cylinder" type="cylinder" args="4 4 2 20 20 1 1" />
      </DESCENDANTS>
    </NODE>

    <NODE id="ss_top">
      <MATERIAL id="null"/>
      <TEXTURE id="null"/>
      <TRANSLATION x="0" y="0" z="-8"/>
      <ROTATION axis="x" angle="180"/>
     <DESCENDANTS>
        <LEAF id="ss_top_cylinder" type="cylinder" args="4 4 2 20 20 1 1" />
      </DESCENDANTS>
    </NODE>

    <NODE id="ss_middle">
      <MATERIAL id="null"/>
      <TEXTURE id="null"/>
      <TRANSLATION x="0" y="0" z="-8"/>
     <DESCENDANTS>
        <LEAF id="ss_mid_cylinder" type="cylinder" args="16 4 4 20 20 1 1" />
      </DESCENDANTS>
    </NODE>

</NODES>

</SCENE>
