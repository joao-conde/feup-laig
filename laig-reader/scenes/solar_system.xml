<SCENE>

<INITIALS>
    <frustum near="0.1" far="500"/>
    <translation x="-1" y="1" z="0" />
    <rotation axis="x" angle="0" />
    <rotation axis="y" angle="0" />
    <rotation axis="z" angle="0" />
    <scale sx="1.5" sy="1.5" sz="1.5" />
    <reference length="5" />
</INITIALS>

<ILLUMINATION>
    <ambient r="0.3" g="0.3" b="0.3" a="1" />
    <background r="0.1" g="0.1" b="0.1" a="1" />
    <doubleside value = "1"/>
</ILLUMINATION>

<LIGHTS>
	<LIGHT id="sun_light">
        <enable value ="1" />
        <position  x="0" y="0" z="0" w="1" />
        <ambient r="1.0" g="1.0" b="1.0" a="1.0" />
        <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
        <specular r="1.0" g="1.0" b="1.0" a="1.0" />
    </LIGHT>
</LIGHTS>

<TEXTURES>
    <TEXTURE id="sun_surface">
      <file path="images/sunsurface.jpg" />
      <amplif_factor s="1" t="1" />
    </TEXTURE>

    <TEXTURE id="earth_surface">
      <file path="images/earth.jpg" />
      <amplif_factor s="1" t="1" />
    </TEXTURE>

    <TEXTURE id="earth_moon_surface">
      <file path="images/moon.jpg" />
      <amplif_factor s="1" t="1" />
    </TEXTURE>

    <TEXTURE id="mercury_surface">
      <file path="images/mercury_surface.jpg"/>
      <amplif_factor s="1" t="1"/>
    </TEXTURE>

    <TEXTURE id="venus_surface">
      <file path="images/venus_surface.jpg"/>
      <amplif_factor s="1" t="1"/>
    </TEXTURE>

    <TEXTURE id="mars_surface">
      <file path="images/mars_surface.jpg"/>
      <amplif_factor s="1" t="1"/>
    </TEXTURE>

    <TEXTURE id="jupiter_surface">
      <file path="images/jupiter_surface.jpg"/>
      <amplif_factor s="1" t="1"/>
    </TEXTURE>

    <TEXTURE id="saturn_surface">
      <file path="images/saturn_surface.jpg"/>
      <amplif_factor s="1" t="1"/>
    </TEXTURE>

    <TEXTURE id="uranus_surface">
      <file path="images/uranus_surface.jpg"/>
      <amplif_factor s="1" t="1"/>
    </TEXTURE>

    <TEXTURE id="neptune_surface">
      <file path="images/neptune_surface.jpg"/>
      <amplif_factor s="1" t="1"/>
    </TEXTURE>

</TEXTURES>

<MATERIALS>

    <!-- A default material -->
    <MATERIAL id="default_material">
        <shininess value="1" />
        <specular r="0.5" g="0.5" b="0.5" a="1" />
        <diffuse r="0.5" g="0.5" b="0.5" a="1" />
        <ambient r="0.5" g="0.5" b="0.5" a="1" />
        <emission r="0.5" g="0.5" b="0.5" a="1" />
    </MATERIAL>

    <!-- Sun material -->
      <MATERIAL id="sun_material">
        <shininess value="100" />
        <specular r="0.0" g="0.0" b="0.0" a="1" />
        <diffuse r="0.0" g="0.0" b="0.0" a="1" />
        <ambient r="0.0" g="0.0" b="0.0" a="1" />
        <emission r="1.0" g="1.0" b="1.0" a="1" />
    </MATERIAL>

      <!-- Earth material -->
      <MATERIAL id="earth_material">
          <shininess value="1" />
          <specular r="0.8" g="0.8" b="0.8" a="1" />
          <diffuse r="0.8" g="0.8" b="0.8" a="1" />
          <ambient r="0" g="0" b="0" a="1" />
          <emission r="0.0" g="0.0" b="0.0" a="1" />
      </MATERIAL>

      <!-- Moon material -->
      <MATERIAL id="earth_moon_material">
          <shininess value="1" />
          <specular r="1.0" g="1.0" b="1.0" a="1" />
          <diffuse r="1.0" g="1.0" b="1.0" a="1" />
          <ambient r="0" g="0" b="0" a="1" />
          <emission r="0.0" g="0.0" b="0.0" a="1" />
      </MATERIAL>

      <!-- Mercury material -->
      <MATERIAL id="mercury_material">
          <shininess value="1" />
          <specular r="1.0" g="1.0" b="1.0" a="1" />
          <diffuse r="1.0" g="1.0" b="1.0" a="1" />
          <ambient r="0" g="0" b="0" a="1" />
          <emission r="0.0" g="0.0" b="0.0" a="1" />
      </MATERIAL>

</MATERIALS>

<NODES>

    <ROOT id="root" />

    <NODE id="root">
        <MATERIAL id="default_material" />
        <TEXTURE id="null" />

        <DESCENDANTS>
            <NODEREF id="sun" />
            <NODEREF id="mercury" />
            <NODEREF id="venus" />
            <NODEREF id="earth" />
            <NODEREF id="mars" />
            <NODEREF id="jupiter" />
            <NODEREF id="saturn" />
            <NODEREF id="uranus" />
            <NODEREF id="neptune" />
            <NODEREF id="shuttle" />
        </DESCENDANTS>
    </NODE>


    <NODE id="sun">
        <MATERIAL id="sun_material" />
        <TEXTURE id="sun_surface" />
        <DESCENDANTS>
            <LEAF id="sun_sphere" type="sphere" args="3 200 200" />
        </DESCENDANTS>
    </NODE>


    <NODE id="mercury">
        <MATERIAL id="mercury_material" />
        <TEXTURE id="mercury_surface" />
        <TRANSLATION x="5" y="0" z="0" />
        <DESCENDANTS>
            <LEAF id="mercury_sphere" type="sphere" args="1 200 200" />
        </DESCENDANTS>
    </NODE>

    <NODE id="venus">
        <MATERIAL id="null" />
        <TEXTURE id="venus_surface" />
        <TRANSLATION x="7.5" y="0" z="0" />
        <DESCENDANTS>
            <LEAF id="venus_sphere" type="sphere" args="1 200 200" />
        </DESCENDANTS>
    </NODE>


    <NODE id="earth">
        <MATERIAL id="earth_material" />
        <TEXTURE id="earth_surface" />
        <TRANSLATION x="10" y="0" z="0" />
        <ROTATION axis="x" angle="-90" />
        <DESCENDANTS>
            <NODEREF id = "earth_moon"/>
            <NODEREF id="space_station"/>
            <LEAF id="earth_sphere" type="sphere" args="1 200 200" />
        </DESCENDANTS>
    </NODE>

    <NODE id="earth_moon">
        <MATERIAL id="earth_moon_material"/>
        <TEXTURE id="earth_moon_surface"/>
        <TRANSLATION x="-1" y="1" z="-1"/>
        <SCALE sx="0.1" sy="0.1" sz="0.1"/>
        <DESCENDANTS>
            <LEAF id="earth_moon_sphere_leaf" type="sphere" args="1 200 200"/>
        </DESCENDANTS>
    </NODE>

    <NODE id="mars">
        <MATERIAL id="null" />
        <TEXTURE id="mars_surface" />
        <TRANSLATION x="12.5" y="0" z="0" />
        <DESCENDANTS>
            <NODEREF id="mars_moon1" />
            <NODEREF id="mars_moon2" />
            <LEAF id="mars_sphere" type="sphere" args="1 200 200" />
        </DESCENDANTS>
    </NODE>

    <NODE id="mars_moon1">
        <MATERIAL id="null"/>
        <TEXTURE id="earth_moon_surface"/>
        <TRANSLATION x="-1" y="1" z="-1"/>
        <SCALE sx="0.1" sy="0.1" sz="0.1"/>
        <DESCENDANTS>
            <LEAF id="mars_moon1_sphere" type="sphere" args="1 200 200"/>
        </DESCENDANTS>
    </NODE>

    <NODE id="mars_moon2">
        <MATERIAL id="null"/>
        <TEXTURE id="earth_moon_surface"/>
        <TRANSLATION x="1" y="0" z="-1"/>
        <SCALE sx="0.1" sy="0.1" sz="0.1"/>
        <DESCENDANTS>
            <LEAF id="mars_moon2_sphere" type="sphere" args="1 200 200"/>
        </DESCENDANTS>
    </NODE>

    <NODE id="jupiter">
        <MATERIAL id="null" />
        <TEXTURE id="jupiter_surface" />
        <TRANSLATION x="15" y="0" z="0" />
        <DESCENDANTS>
            <LEAF id="jupiter_sphere" type="sphere" args="1 200 200" />
        </DESCENDANTS>
    </NODE>

    <NODE id="saturn">
        <MATERIAL id="null" />
        <TEXTURE id="saturn_surface" />
        <TRANSLATION x="17.5" y="0" z="0" />
        <DESCENDANTS>
            <LEAF id="saturn_sphere" type="sphere" args="1 200 200" />
        </DESCENDANTS>
    </NODE>

    <NODE id="uranus">
        <MATERIAL id="null" />
        <TEXTURE id="uranus_surface" />
        <TRANSLATION x="20" y="0" z="0" />
        <DESCENDANTS>
            <LEAF id="uranus_sphere" type="sphere" args="1 200 200" />
        </DESCENDANTS>
    </NODE>

    <NODE id="neptune">
        <MATERIAL id="null" />
        <TEXTURE id="neptune_surface" />
        <TRANSLATION x="22.5" y="0" z="0" />
        <DESCENDANTS>
            <LEAF id="neptune_sphere" type="sphere" args="1 200 200" />
        </DESCENDANTS>
    </NODE>

    <NODE id="unit_cube">
      <MATERIAL id="null"/>
      <TEXTURE id= "null"/>

      <DESCENDANTS>
        <NODEREF id="unit_cube_face1"/>
        <NODEREF id="unit_cube_face2"/>
        <NODEREF id="unit_cube_face3"/>
        <NODEREF id="unit_cube_face4"/>
        <NODEREF id="unit_cube_face5"/>
        <NODEREF id="unit_cube_face6"/>
      </DESCENDANTS>
    </NODE>

    <NODE id="unit_cube_face1">
      <MATERIAL id="null"/>
      <TEXTURE id="null"/>
      <TRANSLATION x="0" y="0" z="1"/>
      <DESCENDANTS>
        <LEAF id="unit_cube_face1_rectangle" type="rectangle" args="0 1 1 0"/>
      </DESCENDANTS>
    </NODE>

    <NODE id="unit_cube_face2">
      <MATERIAL id="null"/>
      <TEXTURE id="null"/>
      <ROTATION axis="y" angle="-90"/>
      <DESCENDANTS>
        <LEAF id="unit_cube_face2_rectangle" type="rectangle" args="0 1 1 0"/>
      </DESCENDANTS>
    </NODE>

    <NODE id="unit_cube_face3">
      <MATERIAL id="null"/>
      <TEXTURE id="null"/>
      <ROTATION axis="x" angle="90"/>
      <DESCENDANTS>
        <LEAF id="unit_cube_face3_rectangle" type="rectangle" args="0 1 1 0"/>
      </DESCENDANTS>
    </NODE>

    <NODE id="unit_cube_face4">
      <MATERIAL id="null"/>
      <TEXTURE id="null"/>
      <TRANSLATION x="1" y="0" z="1"/>
      <ROTATION axis="y" angle="90"/>
      <DESCENDANTS>
        <LEAF id="unit_cube_face4_rectangle" type="rectangle" args="0 1 1 0"/>
      </DESCENDANTS>
    </NODE>

    <NODE id="unit_cube_face5">
      <MATERIAL id="null"/>
      <TEXTURE id="null"/>
      <TRANSLATION x="1" y="0" z="0"/>
      <ROTATION axis="y" angle="180"/>
      <DESCENDANTS>
        <LEAF id="unit_cube_face5_rectangle" type="rectangle" args="0 1 1 0"/>
      </DESCENDANTS>
    </NODE>

    <NODE id="unit_cube_face6">
      <MATERIAL id="null"/>
      <TEXTURE id="null"/>
      <TRANSLATION x="0" y="1" z="0"/>
      <ROTATION axis="x" angle="-90"/>
      <TRANSLATION x="0" y="-1" z="0"/>
      <DESCENDANTS>
        <LEAF id="unit_cube_face6_rectangle" type="rectangle" args="0 1 1 0"/>
      </DESCENDANTS>
    </NODE>


    <NODE id="space_station">
      <MATERIAL id = "null"/>
      <TEXTURE id="clear"/>
      <TRANSLATION x="0" y="0" z="1"/>
      <SCALE sx="0.1" sy="0.1" sz="0.1"/>
      <DESCENDANTS>
        <NODEREF id="space_station_body"/>
        <!--<NODEREF id="space_station_sides"/>-->
      </DESCENDANTS>
    </NODE>

    <NODE id="space_station_body">
      <MATERIAL id = "null"/>
      <TEXTURE id="null"/>
      <DESCENDANTS>
        <NODEREF id="space_station_upper_body"/>
        <NODEREF id="space_station_lower_body"/>
      </DESCENDANTS>
    </NODE>

    <NODE id="space_station_upper_body">
      <MATERIAL id = "null"/>
      <TEXTURE id="null"/>
      <DESCENDANTS>
        <LEAF id ="space_station_upper_body_cylinder" type="cylinder" args = "2 1 1 100 100 1 1"/>
      </DESCENDANTS>
    </NODE>

    <NODE id="space_station_lower_body">
      <MATERIAL id = "null"/>
      <TEXTURE id="null"/>
      <TRANSLATION x="0" y="0" z="-2"/> 
      <DESCENDANTS>
        <LEAF id ="space_station_lowers_body_cylinder" type="cylinder" args = "2 1 1 100 100 1 1"/>
      </DESCENDANTS>
    </NODE>





</NODES>

</SCENE>
